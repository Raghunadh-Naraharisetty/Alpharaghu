# ============================================================
# ALPHARAGHU - Algo Trading Bot Configuration
# ============================================================
# Copy this file to .env and fill in your credentials

# --- ALPACA PAPER TRADING ---
ALPACA_API_KEY=your_alpaca_paper_api_key_here
ALPACA_SECRET_KEY=your_alpaca_paper_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets   # Paper trading
# ALPACA_BASE_URL=https://api.alpaca.markets       # Live trading (uncomment when ready)

# --- TELEGRAM BOT ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here    # From @BotFather
TELEGRAM_CHAT_ID=your_telegram_group_chat_id_here  # Group chat ID (negative number for groups)

# --- NEWS & SENTIMENT ---
NEWS_API_KEY=your_newsapi_key_here                  # From newsapi.org (free tier available)

# --- TRADING SETTINGS ---
MAX_POSITION_SIZE=1000        # Max $ per trade
MAX_OPEN_POSITIONS=5          # Max simultaneous positions
RISK_PER_TRADE_PCT=2          # % of portfolio risked per trade
STOP_LOSS_PCT=2               # Default stop loss %
TAKE_PROFIT_PCT=4             # Default take profit %

# --- SCAN SETTINGS ---
USE_DYNAMIC_SCANNER=true      # true=scan market, false=use watchlist only
SCAN_INTERVAL_MINUTES=15      # How often to scan for new signals
